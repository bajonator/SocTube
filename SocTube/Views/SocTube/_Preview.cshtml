                if (value != null && !string.IsNullOrEmpty(value.ToString()) && !property.Name.ToString().Contains("Id"))
                {
                var iconName = property.Name + ".png";
                var iconUrl = value.ToString();*@


                    }
                </div>
            </div>
        </div>

